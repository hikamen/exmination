/**index.wxss**/
.content {
    padding-bottom: 260rpx;
}
.header text {
    margin: 0 20rpx;
}
.clock {
    text-align: center;
    padding-top: 0;
    padding-bottom: 10rpx;
}

.clock .warning {
    color: red;
}

.option {
    display: block;
    margin: 20rpx 0;
}
.blank, textarea{
    border: 1px solid #bcbcbc;
    border-radius: 5rpx;
    height: 40rpx;
    padding: 15rpx 10rpx;
    margin: 10rpx 0;
}
textarea {
    height: 200rpx;
    width: 96%;
}
.correct {
    color: #25dc38;
}
.half_correct {
    color: #ffa500;
}
.wrong {
    color: #ff0000;
}
.type {
    font-size: 10pt;
    color: #cdcdc9;
    margin-left: 20rpx;
}
.answer {
    font-size: 11pt;
    display: flex;
    flex-direction: column;
}
.answer>text {
    margin-top: 20rpx;
}
.section label {
    font-size: 11pt;
}
.title {
    display: flex;
}

.footer {
    background: #FFFFFF;
    display: flex;
    flex-direction: column;
}
.footer>view {
    display: inline-block;
}

.footer button {
    border: 0;
    margin:0;
    padding: 0;
}

.footer .nav-area {
    display: flex;
    flex-direction: row;
    align-items: center;
}
.footer .left {
    width: 34%;
    text-align: left;
}
.footer .right {
    width: 34%;
    text-align: right;
}

.footer .middle {
    width: 28%;
    border-left:  1px solid #f1f1f1;
    border-right:  1px solid #f1f1f1;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.footer .middle .current {
    color: #25dc38;
}

.footer .middle image {
    width: 16px;
    height: 16px;
    margin-right: 10rpx;
}

button[plain][disabled] {
    background: #FFFFFF;
}
.inner-container {
    padding: 30rpx 20rpx;
    height: 400rpx;
}

.inner-container button{
    border-radius: 50%;
    padding: 16rpx;
    margin-left: 30rpx;
    font-weight: bold;
    width: 100rpx;
    margin-bottom: 30rpx;
}
.inner-container button.answered {
    border: 2px solid #586c94;
    color: #586c94;
}
